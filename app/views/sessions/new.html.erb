<div class="container">
  <div class="jumbotron">
    <div class="form-group">
      <%= form_tag do %>
        <%= label_tag 'Username:' %>
        <%= text_field_tag :username, nil, :class => "form-control" %>
        <%= label_tag 'Password:' %>
        <%= password_field_tag :password, nil, :class => "form-control" %>
        <%= submit_tag 'Log In', :url => login_path, :class => "btn btn-primary mt-2" %>
      <% end %>
    </div>
      <%= link_to 'Login with Facebook', '/auth/facebook', :class => 'btn btn-primary' %>
  </div>
</div>
