<div class="container">
  <div class="jumbotron">
    <h1 class="text-center">Add Ingredients</h1>
    <div class="form-group">
       <%= form_for [@recipe, @ingredient] do |f|%>
       <%= render :partial => 'form', :locals => {:f => f} %>
        <%= f.submit 'Create Ingredients', :class => "btn btn-primary mt-2" %>
        <%= link_to 'Back to Recipe', user_recipe_path(@recipe.user, @recipe), :class => 'btn btn-primary mt-2' %>
      <% end %>
      <h2 class="mt-3"><%= @recipe.name %> :Ingredients List</h2>
      <% @ingredients.each do |ingredient| %>
        <ul>
          <li><%= ingredient.item.name %> <%= ingredient.quantity %> <%= link_to "(delete)", [@recipe, ingredient], method: :delete, data: { confirm: "Really?" } %> </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
