<!DOCTYPE html>
<html>
  <head>
    <title>MacroMeals</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to 'Sign in With Facebook', '/auth/facebook' %>
    <% if flash[:message] %>
      <h2><%= flash[:message] %></h2>
    <% end %>
    <%= yield %>
  </body>
</html>
