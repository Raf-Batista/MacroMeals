<div class="container">
  <div class="jumbotron">
    <h1 class="text-center">Create a Recipe</h1>
    <div class="form-group">
      <%= form_for [@recipe.user, @recipe] do |f|%>
        <%= render :partial => 'form', :locals => {:f => f} %>
