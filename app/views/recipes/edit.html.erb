<%= form_for [@user, @recipe] do |f|%>
  <%= f.label :name, "Name:" %>
  <%= f.text_field :name, :value => @recipe.name %>

  <%= f.label :directions, "Directions:" %>
  <%= f.text_area :directions, :value => @recipe.directions %>

  <%= f.label :prep_time, "Prep Time:" %>
  <%= f.text_field :prep_time, :value => @recipe.prep_time %>

  <%= f.label :cook_time, "Cook Time:" %>
  <%= f.text_field :cook_time, :value => @recipe.cook_time %>

  <%= f.label :protien, "Protien:" %>
  <%= f.text_field :protien, :value => @recipe.protien %>

  <%= f.label :carbs, "Carbs:" %>
  <%= f.text_field :carbs, :value => @recipe.carbs %>

  <%= f.label :fat, "Fat:" %>
  <%= f.text_field :fat, :value => @recipe.fat %>

  <% @recipe.ingredients.count.times do |i| %>
    <label>Ingredient <%= i + 1 %></label>
    <input name="ingredient[][name]" id="ingredient<%= i + 1 %>" value="<%= @recipe.ingredients[i].item.name %>"/>
    <label>Quantity <%= i + 1 %></label>
    <input name="ingredient[][quantity]" id="quantity<%= i + 1 %>" value="<%= @recipe.ingredients[i].quantity %>"/>
  <% end %>


  <%= f.submit "Update Recipe" %>
<% end %>
